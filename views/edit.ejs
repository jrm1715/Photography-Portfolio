<% include ./partials/header %>
<h1 class="ui dividing header centered">Edit Post</h1>
<form class="ui form" action="/photos/<%= photo._id %>?_method=PUT" method="POST">
  <article class="field">
    <label>Title</label>
    <input type="text" name="photo[title]" value="<%=photo.title%>">
  </article>
  <article class="field">
    <label>Image URL</label>
    <input type="text" name="photo[image]" value="<%=photo.image%>">
  </article>
  <article class="field">
    <label>Description</label>
    <input type="text" name="photo[description]" value="<%=photo.description%>">
  </article>
  <article class="field">
    <label>Test Comment</label>
    <input type="text" name="photo[comments]" value="<%=photo.comments%>">
  </article>
  <button class="ui blue basic button" type="submit">Update<i class="check circle outline icon"></i></button>
</form>
<% include ./partials/footer %>
